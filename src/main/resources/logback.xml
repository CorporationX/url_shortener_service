<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/application-log.json</file>

        <encoder>
            <pattern>
                {
                "timestamp": %d{yyyy-MM-dd HH:mm:ss.SSS},
                "level": "%level",
                "logger": %logger{36},
                "thread": "%thread",
                "message": "%msg%n"
                }
            </pattern>
        </encoder>
    </appender>
    <root >
        <appender-ref ref="FILE" />
    </root>
</configuration>